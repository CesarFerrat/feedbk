<div class="container">
  <div class="col-lg-8">

    <h3>Add A New Team</h3>

      <% if @team.errors.any? %>
        <ul class="list-unstyled">
          <% @team.errors.full_messages.each do |msg| %>
            <li class="alert alert-danger" role="alert"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_for [current_user, @team] do |form| %>
        <div class="form-group">
          <%= form.label :team_name %>
          <%= form.text_field :team_name, class: 'form-control' %>
        </div>
          <button type="submit" class="btn btn-success">Add Team</button>
      <% end %>

  </div>
</div>